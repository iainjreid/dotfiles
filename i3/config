# vim: ts=2:et

set $mod1 Mod4
set $mod2 Mod4+Shift

set $color00 #151515
set $color01 #202020
set $color02 #303030
set $color03 #505050
set $color04 #b0b0b0
set $color05 #d0d0d0
set $color06 #e0e0e0
set $color07 #f5f5f5
set $color08 #fb9fb1
set $color09 #eda987
set $color0A #ddb26f
set $color0B #acc267
set $color0C #12cfc0
set $color0D #6fc2ef
set $color0E #e1a3ee
set $color0F #deaf8f

set $workspace1  "1:⚀"
set $workspace2  "2:⚁"
set $workspace3  "3:⚂"
set $workspace4  "4:⚃"
set $workspace5  "5:⚄"
set $workspace6  "6:⚅"

font pango:Overpass Mono 12

# Start a terminal
bindsym $mod1+Return exec i3-sensible-terminal

# Kill focused window
bindsym $mod2+q kill

# start dmenu (a program launcher)
bindsym $mod1+d exec dmenu_run

# alternatively, you can use the cursor keys:
bindsym $mod1+Left focus left
bindsym $mod1+Down focus down
bindsym $mod1+Up focus up
bindsym $mod1+Right focus right

# alternatively, you can use the cursor keys:
bindsym $mod2+Left move left
bindsym $mod2+Down move down
bindsym $mod2+Up move up
bindsym $mod2+Right move right

# split in horizontal orientation
bindsym $mod1+h split h

# split in vertical orientation
bindsym $mod1+v split v

# enter fullscreen mode for the focused container
bindsym $mod1+f fullscreen toggle

# Switch to the targeted workspace
bindsym $mod1+1 workspace $workspace1
bindsym $mod1+2 workspace $workspace2
bindsym $mod1+3 workspace $workspace3
bindsym $mod1+4 workspace $workspace4
bindsym $mod1+5 workspace $workspace5
bindsym $mod1+6 workspace $workspace6

# Move the focused container to the target workspace
bindsym $mod2+1 move container to workspace $workspace1
bindsym $mod2+2 move container to workspace $workspace2
bindsym $mod2+3 move container to workspace $workspace3
bindsym $mod2+4 move container to workspace $workspace4
bindsym $mod2+5 move container to workspace $workspace5
bindsym $mod2+6 move container to workspace $workspace6

# Reload the configuration file, or restart i3 itself
bindsym $mod2+c reload
bindsym $mod2+r restart

# exit i3 (logs you out of your X session)
bindsym $mod2+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
  bindsym Left  resize shrink width  10 px or 10 ppt
  bindsym Down  resize grow   height 10 px or 10 ppt
  bindsym Up    resize shrink height 10 px or 10 ppt
  bindsym Right resize grow   width  10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod1+r mode "resize"

bar {
  status_command i3status --config ~/.config/i3/status.conf
	separator_symbol " "
	strip_workspace_numbers yes
	position top
	i3bar_command i3bar -t
	position top
	bindsym button4 nop
	bindsym button5 nop
	tray_output eDP1
	tray_output LVDS-0
  tray_padding 10 px
  mode hide

  colors {
    background $color00
    separator  $color0A
    statusline $color04

    # State               Border     BG         Text
    focused_workspace     $color00   $color0D   $color00
    active_workspace      $color00   $color03   $color00
    inactive_workspace    $color00   $color00   $color05
    urgent_workspace      $color00   $color08   $color00
    binding_mode          $color00   $color0A   $color00  
  }
}

new_window pixel 3 px

hide_edge_borders both

# Property Name           Border     BG         Text       Indicator  Child Border
client.focused            $color05   $color0D   $color00   $color0D   $color0D
client.focused_inactive   $color01   $color01   $color05   $color03   $color01
client.unfocused          $color01   $color00   $color05   $color01   $color01
client.urgent             $color08   $color08   $color00   $color08   $color08
client.placeholder        $color00   $color00   $color05   $color00   $color00
client.background         $color07

